{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./dist/",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "strict": false,
    "lib": ["es6", "dom"],
    // "paths": {
    //   "*": ["node_modules/*", "types/*"]
    // },
    "esModuleInterop": true,
    "strictPropertyInitialization": false
  },
  "exclude": ["node_modules"],
  "files": ["./src/index.tsx", "./types/react-rte.d.ts"]
}
